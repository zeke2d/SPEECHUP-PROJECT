<div id="contentPage">

    <style>
         #contentPage { 
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100%;
            width: 100%;
        }

        h2 {
            text-align: center;
            margin-bottom: 10px;
            color: #FF4B4B;
        }

        h3 {
            text-align: center;
            margin-bottom: 20px;
            color: #002A73
        }

        .button-group {
            display: flex;
            flex-direction: column;
            gap: 30px;
            width: 30%;
            max-width: 600px;
            margin-top: 15px;
            margin-bottom: 15px;
            margin-left: 60px;
        }

        .button-row {
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .button-group button:not(.info-button) {
            padding: 20px;
            font-size: 18px;
            border: none;
            border-radius: 20px;
            background-color: #FF7878;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-align: center;
            font-weight: bold;
            width: 100%;
            display: flex;
            flex-direction: column;
        }

        .button-group button:not(.info-button):hover {
            background-color: #FF4B4B;
        }

        .info-button {
            background: none;
            border: none;
            cursor: pointer;
        }

        .info-button img {
            width: 90px;
            height: 90px;
            background-color: transparent;
        }

        .subheading {
            font-style: italic;
            color: rgba(255, 255, 255, 0.75);
            text-align: center;
            margin-top: 5px;
        }
    </style>

    <h2>COURSES</h2>
    <br>
    <h3>To begin your Speech Therapy Session please select a Speech Disorder Unit below:</h3>

    <div class="button-group">
        <div class="button-row">
            <button onclick="loadPage('apraxiagameselection')">
                APRAXIA
                <h6 class="subheading">Strengthen those Oral Muscles</h6>
            </button>
            <button class="info-button" onclick="loadPage('apraxiaInfo')">
                <img src="apraxiaInformation-button.png" alt="Apraxia Info">
            </button>
        </div>
        <div class="button-row">
            <button onclick="loadPage('dysarthriagameselection')">
                DYSARTHRIA
                <h6 class="subheading">Improve Word Recognition and Pronounciation</h6>
            </button>
            <button class="info-button" onclick="loadPage('dysarthriaInfo')">
                <img src="dysarthriaInformation-button.png" alt="Dysarthria Info">
            </button>
        </div>
        <div class="button-row">
            <button onclick="loadPage('aphasiagameselection')">
                APHASIA
                <h6 class="subheading">Communicate with Confidence</h6>
            </button>
            <button class="info-button" onclick="loadPage('aphasiaInfo')">
                <img src="aphasiaInformation-button.png" alt="Aphasia Info">
            </button>
        </div>
    </div>
</div>

<script>
function loadPage(pageName) {
    fetch(`/${pageName}`)
    .then(response => response.text())
    .then(data => {
        document.getElementById("dynamicContent").innerHTML = data;
    })
    .catch(error => {
        console.error("Error loading page:", error);
        document.getElementById("dynamicContent").innerHTML = "<h3>Error loading page.</h3>";
    });
}
</script>
