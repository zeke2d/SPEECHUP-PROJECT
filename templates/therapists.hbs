<style>
    /* Container that holds the entire section */
.therapists-container {
  padding: 20px;
}

/* Page heading */
.therapists-container h2 {
  margin-bottom: 20px;
  font-size: 24px;
  font-weight: bold;
}

/* A responsive grid for the cards */
.therapists-grid {
  display: flex;
  flex-wrap: wrap;       /* wrap to next line if needed */
  gap: 20px;             /* space between cards */
}

/* Individual card styling */
.therapist-card {
  width: 240px;
  border: 4px solid #2c3e50;
  border-radius: 8px;
  padding: 15px;
  box-sizing: border-box;
  background-color: #fff;
}

/* The circular container for the image */
.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  overflow: hidden;       /* clip any overflowing corners */
  margin: 0 auto 10px;    /* center horizontally & add bottom margin */
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Make the image fill the avatar and remain centered */
.avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Basic text styling for therapist details */
.therapist-details {
  text-align: center;
}

.therapist-name {
  font-weight: bold;
  margin-bottom: 5px;
  font-size: 16px;
}

.therapist-email {
  font-size: 14px;
  margin-bottom: 5px;
  word-wrap: break-word; /* handle long emails */
}

.therapist-bio {
  font-size: 14px;
  color: #807171;
  margin-bottom: 14px;
  white-space: normal; /* If you want a single line with ellipsis */
  word-wrap: break-word;
}

.therapist-sched {
  font-weight: bold;
  font-size: 14px;
  color: #807171;
  margin-bottom: 10px;
  white-space: normal; /* If you want a single line with ellipsis */
  word-wrap: break-word;
}

.therapist-sched h1 {
  font-weight: bold;
  font-size: 14px;
  color: #000000;
  margin-bottom: 10px;
}

.send-email-btn {
    background-color: #df1645;
    color: white;
    border: none;
    padding: 6px 10px;
    border-radius: 4px;
    cursor: pointer;
    margin-top: 5px;
  }
  .send-email-btn:hover {
    background-color: #ff003c;
  }

  /* Modal overlay (full screen) */
.email-modal {
  display: none; /* hidden by default */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  
  /* A semi-transparent background */
  background-color: rgba(0, 0, 0, 0.5);
  
  /* Center children using flexbox */
  display: flex;
  align-items: center;
  justify-content: center;
  
  z-index: 9999; /* ensure it's above other elements */
}

/* Modal content container */
.email-modal-content {
  background-color: #fff; /* or a light color that fits your theme */
  padding: 2rem;
  border-radius: 8px;
  width: 400px; /* adjust as needed */
  max-width: 90%;
  position: relative;
  box-shadow: 0 5px 15px rgba(0,0,0,0.3);
  font-family: "Arial", sans-serif; /* match your app’s font */
}

/* Close button (X) in the top-right corner */
.close-btn {
  position: absolute;
  top: 12px;
  right: 16px;
  font-size: 1.5rem;
  color: #aaa;
  cursor: pointer;
  transition: color 0.3s;
}
.close-btn:hover {
  color: #333;
}

/* Modal form labels and inputs */
.email-modal-content label {
  display: block;
  margin-bottom: 4px;
  font-weight: 600;
}

.email-modal-content input,
.email-modal-content textarea {
  width: 100%;
  margin-bottom: 1rem;
  padding: 0.5rem;
  box-sizing: border-box;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-size: 0.95rem;
}

/* Send button styling */
.send-button {
  background-color: #df1645; /* pick a color that fits your theme */
  color: #fff;
  border: none;
  padding: 0.75rem 1.25rem;
  border-radius: 4px;
  margin-left: 250px;
  cursor: pointer;
  font-size: 1rem;
  transition: background-color 0.3s;
}
.send-button:hover {
  background-color: #ff003c;
}

</style>

<!-- therapists.hbs -->
<div class="therapists-container">
  <!-- Title or heading for this page -->
  <h2>Our Therapists</h2>
  
  <!-- Grid container for therapist cards -->
  <div class="therapists-grid">
    {{#each therapists}}
      <div class="therapist-card">
        <!-- Circular avatar -->
        <div class="avatar">
          <!-- Use the therapist’s profileImage from DB -->
          <img src="{{this.profileImage}}" alt="Therapist Image" />
        </div>

        <!-- Therapist details -->
        <div class="therapist-details">
          <div class="therapist-name">
            {{this.firstName}} {{this.lastName}}
          </div>
          <div class="therapist-email">
            {{this.email}}
          </div>
          <div class="therapist-bio">
            {{this.bio}}
          </div>
          <div class="therapist-sched">
            <h1>Working Hours:</h1> {{this.workingHours}}
          </div>

          <!-- Send Email Button -->
          <button 
            class="send-email-btn" 
            onclick="openEmailModal('{{this.email}}')"
          >
              <i class="fa fa-envelope"></i> Send Email
            </button>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<!-- Email Modal -->
<div id="emailModal" class="email-modal" style="display: none;">
  <div class="email-modal-content">
    <span class="close-btn" onclick="closeEmailModal()">&times;</span>
    <h3>Send Email</h3>
    <br>
    <!-- Sender's Gmail Address -->
    <label for="senderEmailInput">Your Gmail Address:</label>
    <input type="email" id="senderEmailInput" placeholder="Enter your Gmail address" />
    
    <!-- Sender's Gmail Password -->
    <label for="senderPasswordInput">Your Gmail Password:</label>
    <input type="password" id="senderPasswordInput" placeholder="Enter your Gmail password" />
    
    <!-- Recipient's Email Address -->
    <label for="recipientEmailInput">To:</label>
    <input type="text" id="recipientEmailInput" disabled />
    
    <!-- Email Subject -->
    <label for="emailSubject">Subject:</label>
    <input type="text" id="emailSubject" placeholder="Enter subject" />
    
    <!-- Email Message -->
    <label for="emailMessage">Message:</label>
    <textarea id="emailMessage" rows="5" placeholder="Type your message"></textarea>
    
    <!-- Send Button -->
    <button class="send-button" onclick="sendEmail()">Send</button>
  </div>
</div>