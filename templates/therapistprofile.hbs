<style>
        .container {
            max-width: 600px;
            margin: 50px auto;
            text-align: center;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            background-color: #fff;
        }

        .password-container {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        input[type="password"], input[type="email"], input[type="text"] {
            width: 200px;
            padding: 5px;
            border: 2px solid #2c3e50;
            border-radius: 5px;
        }

        .profile-header {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .profile-picture img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #df1645;
        }

        .profile-details {
            margin-top: 20px;
            text-align: left;
            padding: 10px;
            border: 4px solid #2c3e50;
            border-radius: 5px;
        }

        .bio-input {
            border: 2px solid #2c3e50;
            border-radius: 5px;
        }

        .logout-btn {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #d9534f;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }

        input[type="file"] {
            margin-top: 10px;
        }

        button {
            margin-top: 5px;
            padding: 5px 10px;
            background-color: #df1645;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .back-btn {
            position: absolute; /* Or fixed, depending on desired behavior */
            top: 20px;         /* Adjust as needed */
            left: 20px;        /* Adjust as needed */
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
            color: #333; /* Or any color you prefer */
            z-index: 10; /* Ensure it's above other content */
        }

        /* Style for the custom file upload button */
        .custom-file-input {
            display: none; /* Hide the default file input */
        }

        .custom-file-label {
            display: inline-block;
            padding: 5px 10px;
            background-color: #df1645; /* Match Upload button */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 13px;
            transition: background-color 0.3s ease;
        }         

        .custom-file-label:hover {
        background-color: #ff003c; /* Darker shade on hover */
        }

        #editProfile {
            background-color: #df1645;
        }

        #editProfile:hover{
            background-color: #ff003c;
        }


        #updateProfile {
            background-color: #df1645;
            display: none;
        }

        #updateProfile:hover{
            background-color: #ff003c;
        }

        #deleteAccount {
            background-color: rgb(221, 32, 32);
        }

        #deleteAccount:hover {
            background-color: #ff0000;
        }

        /* Hide the default file input */
        #profileImageInput {
            display: none;
        }

        /* To show the selected file name */
        #file-name {
            margin-left: 2px;
            margin-right: 2px;
            color: #333;
        }

    </style>

    <h2>Your Profile</h2>
    
    <div class="container">
        <div class="profile-header">
            <div class="profile-picture">
                <img id="profileImage" src="{{profileImage}}?t={{timestamp}}" alt="Profile Picture">
                <form id="uploadForm" enctype="multipart/form-data">
                <label for="profileImageInput" class="custom-file-label">Choose File</label>
                    <input type="file" name="profileImage" id="profileImageInput" accept="image/*">
                    <span id="file-name">No file chosen</span> 
                    <button type="button" class="custom-file-label" onclick="uploadTherapistProfileImage(event)">Upload</button>
                </form>
            </div>
            <br>
            <h2>{{firstName}} {{lastName}}</h2>
            <br>
            <p>{{bio}}</p>
        </div>
        
        <div class="profile-details">
        <p><strong>First Name:</strong></p>
        <input type="text" id="firstName" value="{{firstName}}" disabled>
        <br>
        <br>
        <p><strong>Last Name:</strong></p>
        <input type="text" id="lastName" value="{{lastName}}" disabled>
        <br>
        <br>
        <p><strong>Email:</strong></p>
        <input type="email" id="email" value="{{email}}" disabled>
        <br>
        <br>
        <p><strong>Change Password:</strong></p>
        <input type="password" id="password" placeholder="Enter new password" disabled>
        <br>
        <br>
        <!-- Password Verification Field -->
        <p><strong>Enter your password to view it:</strong></p>
        <input type="password" id="verifyPassword" placeholder="Enter your password">
        <button class="custom-file-label" onclick="verifyTherapistPassword()">Verify</button>
        <br>
        <br>  
        <!-- Password Display -->
        <p><strong>Your Password:</strong></p>
        <div class="password-container">
            <input type="password" id="passwordField" value="*******" readonly>
            <button id="togglePassword" class="custom-file-label" onclick="togglePassword()" disabled>üëÅ</button>
        </div>
        <br>
        <br>
         <!-- New Bio Field (initially disabled) -->
        <p><strong>Bio:</strong></p>
        <textarea id="bio" class="bio-input">{{bio}}</textarea>
        <br>
        <br>
        <p><strong>Working Hours:</strong></p>
        <input type="text" id="workingHours" value="{{workingHours}}" disabled>
        <br>
        <br>

        <button id="editProfile" onclick="enableEditing()">Edit Profile</button>
        <button id="updateProfile" onclick="updateProfile()">Update Profile</button>
        <button id="deleteAccount" onclick="deleteAccount()">Delete Account</button>

        </div>

      </div>

   <script>

    document.addEventListener("DOMContentLoaded", function () {
    function updateFileName() {
        let fileInput = document.getElementById("profileImageInput");
        let fileNameDisplay = document.getElementById("file-name");

        if (fileInput && fileNameDisplay) {
            if (fileInput.files.length > 0) {
                fileNameDisplay.textContent = fileInput.files[0].name; // ‚úÖ Update filename
            } else {
                fileNameDisplay.textContent = "No file chosen"; // ‚úÖ Reset text
            }
        }
    }

    document.body.addEventListener("change", function (event) {
        if (event.target && event.target.id === "profileImageInput") {
            updateFileName();
        }
    });
});

function uploadTherapistProfileImage(event) {
    event.preventDefault(); // ‚úÖ Prevent form submission from reloading the page

    let formData = new FormData();
    let fileInput = document.getElementById("profileImageInput").files[0];

    if (!fileInput) {
        alert("Please select an image to upload.");
        return;
    }

    formData.append("profileImage", fileInput);

    fetch("/upload-therapist-profile", {
        method: "POST",
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {

            let profileImageElement = document.getElementById("profileImage");
            profileImageElement.src = `${data.profileImage}?t=${new Date().getTime()}`; // ‚úÖ Force refresh image cache
            
            let homeProfileIcon = document.querySelector(".profile-icon");
            if (homeProfileIcon) {
                homeProfileIcon.src = `${data.profileImage}?t=${new Date().getTime()}`; // ‚úÖ Also refresh homepage icon
            }
            alert("Profile image updated successfully!");
        } else {
            alert("Error uploading image: " + (data.error || "Unknown error"));
        }
    })
    .catch(error => {
        console.error("Upload error:", error);
        alert("An error occurred while uploading.");
    });
}
</script>
